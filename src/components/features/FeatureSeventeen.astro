<section aria-labelledby="feature-seventeen">
  <h2 class="sr-only" id="feature-seventeen">Feature six</h2>
  <div
    class="items-center px-8 py-12 lg:py-32 mx-auto md:px-12 lg:px-16 xl:px-36 2xl:max-w-7xl">
    <div class="lg:text-center max-w-xl lg:mx-auto">
      <span class="text-white">Feature seventeen</span>
      <h2
        class="text-3xl lg:text-5xl font-semibold mt-6 text-white font-display lg:mx-auto lg:text-center">
        Building blocks for your next website
      </h2>
      <p class="mt-5 font-light text-zinc-400 text-xl">
        Or for your next indie project, because your MVP doesn't need to suck
        that much.
      </p>
    </div>
    <div class="pt-12">
      <div class="mx-auto lg:max-w-7xl">
        <h2 class="sr-only">
          This title is for accessibility only, make it descriptive, Jhonny
        </h2>
        <div class="lg:p-10 lg:bg-metal lg:rounded-3xl">
          <div
            class="flex flex-wrap w-full bg-zinc-800 py-32 px-10 relative rounded-2xl overflow-hidden shadow-superThick">
            <img
              alt="gallery"
              class="w-full object-cover h-full object-center block opacity-25 absolute inset-0"
              src="https://images.unsplash.com/photo-1568992687947-868a62a9f521?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2832&q=80"
            />
            <div class="text-center relative z-10 w-full">
              <div x-data="{ open: false }" class="flex justify-center">
                <!-- Trigger -->
                <span x-on:click="open = true">
                  <div
                    class="p-0.5 rounded-full bg-rainbowBg cursor-pointer shadow-superThick hover:shadow-none transition duration-500 ease-in-out transform">
                    <button
                      type="button"
                      class="inline-flex items-center w-full p-6 text-center text-white transition duration-500 ease-in-out transform rounded-full bg-dark border-8 border-black hover:border-zinc-900 lg:w-auto focus:outline-none focus:ring-2 focus:ring-offset-4 ring-offset-black focus:bg-black focus:ring-sky-300 hover:text-sky-300">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="icon icon-tabler icon-tabler-player-play lg:w-16 lg:h-16"
                        width="28"
                        height="28"
                        viewBox="0 0 24 24"
                        stroke-width="1"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"
                        ></path>
                        <path d="M7 4v16l13 -8z"></path>
                      </svg>
                    </button>
                  </div>
                </span>

                <!-- Modal -->
                <div
                  x-show="open"
                  style="display: none"
                  x-on:keydown.escape.prevent.stop="open = false"
                  role="dialog"
                  aria-modal="true"
                  x-id="['modal-title']"
                  :aria-labelledby="$id('modal-title')"
                  class="fixed inset-0 z-10 overflow-y-auto">
                  <!-- Overlay -->
                  <div
                    x-show="open"
                    x-transition.opacity
                    class="fixed inset-0 bg-black bg-opacity-50">
                  </div>

                  <!-- Panel -->
                  <div
                    x-show="open"
                    x-transition
                    x-on:click="open = false"
                    class="relative flex min-h-screen items-center justify-center p-4">
                    <div
                      x-on:click.stop
                      x-trap.noscroll.inert="open"
                      class="relative w-full max-w-7xl overflow-y-auto rounded-3xl bg-dark p-4 shadow-3xl">
                      <iframe
                        class="w-full aspect-video rounded-2xl"
                        src="https://www.youtube.com/embed/d5gSJcJh93U"
                      ></iframe>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
